# JoyCast Driver Configuration
# Single configuration file for both development and production builds
# Dev/Prod differences are automatically generated by build script

# Base Driver Configuration
BASE_NAME="JoyCast"
BASE_BUNDLE_ID="com.joycast.virtualmic"
BASE_DEVICE_NAME="JoyCast Virtual Microphone"
BASE_DEVICE2_NAME="JoyCast Virtual Output"
MANUFACTURER_NAME="JoyCast Gang"

# Driver Features (same for dev/prod)
NUMBER_OF_CHANNELS=2
DEVICE_HAS_INPUT=true
DEVICE_HAS_OUTPUT=false
DEVICE2_HAS_INPUT=true
DEVICE2_HAS_OUTPUT=false
DEVICE_IS_HIDDEN=false
DEVICE2_IS_HIDDEN=true

# Build Configuration
DEVELOPMENT_TEAM="${APPLE_TEAM_ID:-XXXXXXXXXX}"
CODE_SIGN_IDENTITY="${APPLE_DEVELOPER_CERT_NAME:-Developer ID Application}"