# JoyCast Driver Configuration
# Single configuration file for both development and production builds
# Dev/Prod differences are automatically generated by build script
# 
# This file contains all BlackHole customization parameters:
# https://github.com/ExistentialAudio/BlackHole


# ============================================================================
# CORE DRIVER PARAMETERS
# ============================================================================

# Base Driver Configuration (dev/prod variants auto-generated)
BASE_NAME="JoyCast"
BASE_BUNDLE_ID="com.joycast.virtualmic"
MANUFACTURER_NAME="JoyCast Gang"

# Driver Icon (same for all builds)
PLUGIN_ICON="joycast.icns"


# ============================================================================
# DEVICE CONFIGURATION
# ============================================================================

# Primary Device Configuration
DEVICE_IS_HIDDEN=false
DEVICE_HAS_INPUT=true
DEVICE_HAS_OUTPUT=false

# Mirror Device Configuration  
DEVICE2_IS_HIDDEN=true
DEVICE2_HAS_INPUT=false
DEVICE2_HAS_OUTPUT=true


# ============================================================================
# AUDIO PARAMETERS
# ============================================================================

# Channel Configuration
NUMBER_OF_CHANNELS=1

# Latency Configuration (frames)
# Default: 0 (zero additional latency)
# Range: 0-65536 frames
LATENCY_FRAME_SIZE=0

# Sample Rates (comma-separated list)
SAMPLE_RATES="48000"


# ============================================================================
# VERSIONS CONFIGURATION
# ============================================================================

DEV_NAME_SUFFIX=" Dev"
DEV_BUNDLE_SUFFIX=".dev"
DEV_DEVICE_NAME_PATTERN="JoyCast Virtual Microphone Dev"
DEV_DEVICE2_NAME_PATTERN="JoyCast Virtual Output Dev"
DEV_BOX_UID_PATTERN="JoyCastDEV_UID"

PROD_NAME_SUFFIX=""
PROD_BUNDLE_SUFFIX=""
PROD_DEVICE_NAME_PATTERN="JoyCast Virtual Microphone"
PROD_DEVICE2_NAME_PATTERN="JoyCast Virtual Output"
PROD_BOX_UID_PATTERN="JoyCast_UID"

# Note: Device UIDs are auto-generated by BlackHole using pattern: 
# "<driver_name><channels>ch_UID" (e.g., "JoyCast1ch_UID" or JoyCast Dev1ch_UID)